.container.js-entriesIndex
  .row
    - @entries.each do |entry|
      .col.s4.m6
        .card
          %span.card-title{'v-on:click': "setEntryInfo(#{entry.id})"}
            = entry.title

  .row{'v-show': 'entryInfoBool'}
    .col.s12.m12
      .card.blue-grey.darken-1
        .card-content.white-text
          %span.card-title
            {{ entryInfo.title }}
          .detail
            {{ entryInfo.body }}


= javascript_pack_tag 'entries/index'
